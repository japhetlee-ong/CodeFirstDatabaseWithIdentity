@using CodeFirstDatabase.Models.Accounts
@model ForgotPasswordViewModel
<main>

    @{
        if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @ViewBag.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong> @ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Register
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ForgotPassword", "ForgotPassword", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                        <button type="submit" class="btn btn-success" style="margin-top:10px">Register</button>
                    }
                </div>
            </div>
        </div>
    </div>
</main>